<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="about"
            type="com.example.iptv.ui.about.AboutViewModel" />

        <variable
            name="titleBar"
            type="com.example.iptv.ui.TitleBar" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/activity_about_toolbar"
            layout="@layout/layout_title_bar_common"
            bind:titleBar="@{titleBar}"
            />

        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="@dimen/ic_logo_size"
            android:layout_height="@dimen/ic_logo_size"
            android:layout_below="@id/activity_about_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_super_big"
            android:src="@drawable/ic_logo" />

        <com.example.iptv.utils.RobotoMediumTextView
            android:id="@+id/tv_ftv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/about_ftv"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ftv"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_normal">

            <com.example.iptv.utils.RobotoMediumTextView
                android:id="@+id/tv_about_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_little"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="@string/about_app"
                android:textColor="@color/about_text"
                android:textSize="@dimen/text_size_normal" />

            <com.example.iptv.utils.RobotoRegularTextView
            android:id="@+id/text_view_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_little"
            android:layout_marginBottom="@dimen/margin_normal"
            android:text="@{about.version}"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_normal" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_below="@id/tv_about_app"
                android:layout_marginTop="@dimen/margin_micro"
                android:background="@color/about_line" />

            <com.example.iptv.utils.RobotoMediumTextView
                android:id="@+id/tv_check_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_marginLeft="@dimen/margin_little"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_little"
                android:text="@string/about_check_update"
                android:textColor="@color/about_text"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="@dimen/ic_arrow_width"
                android:layout_height="@dimen/ic_arrow_height"
                android:layout_below="@id/line1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_marginRight="@dimen/margin_little"
                android:layout_marginBottom="@dimen/margin_little"
                android:src="@drawable/arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_below="@id/line1"
                android:layout_marginTop="@dimen/margin_huge"
                android:background="@color/about_line" />
        </RelativeLayout>

    </RelativeLayout>
</layout>